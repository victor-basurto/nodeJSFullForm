extends layout

block content
	h1 Register
	p Please Register using the form below
	ul(class="errors")
		if errors
			each error, i in errors
				li(class="alert alert-danger") #{error.msg}
	form(method="post", action="/user/register", enctype="multipart/form-data" )
		div(class="form-group")
			label Name:
			input(class="form-control", name="name", type="text", placeholder="Enter Name")
		div(class="form-group")
			label Email:
			input(class="form-control", name="email", type="email", placeholder="Enter Email")
		div(class="form-group")
			label Username:
			input(class="form-control", name="username", type="text", placeholder="Enter Username")
		div(class="form-group")
			label Password:
			input(class="form-control", name="password", type="password", placeholder="Enter Password")
		div(class="form-group")
			label Confirm Password:
			input(class="form-control", name="password2", type="password", placeholder="Confirm Password")
		div(class="form-group")
			label Profile Image:
			input(class="form-control", name="avatar", type="file")
		input(type="submit" class="btn btn-info", name="submit", value="Register")